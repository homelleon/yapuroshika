{# AppBundle:Security:login.html.twig
==============================================
-----Template for users' authorisation------ #}

{% extends ':Blog/Page:nonews.html.twig' %}

{% block text %}
    <div class="content__row">
        Введите логин и пароль для входа!
    </div>
    <div class="content__row form inner__border inner__border_orange">
        {% if error %}
            <div class="form__row">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="form__row">
            <form action="{{ path('login') }}" method="post">
                <div class="inner__block inner__block_orange">
                    <label for="username">Логин:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class="inner__block inner__block_orange">
                    <label for="password">Пароль:</label>
                    <input type="password" id="password" name="_password" />
                </div>        
                {#<input type="hidden" name="_target_path" value="/account" />   #}     
                {#<input type="hidden" name="_failure_path" value="login" />#}
                <button class="button button_orange" type="submit">подтвердить</button>
            </form>
        </div>
    </div>
{% endblock %}
