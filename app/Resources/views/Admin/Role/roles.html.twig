{# --------AppBundle:Admin:roles.html.twig------
================================================
Template to show list of all roles in data base#}

{% extends ':Admin:admin_base.html.twig' %}

{% block content %}
    <div class="admin-list">
        <div class="admin-list__row">
            <a class="admin-list__item button button_orange button_to-return"
               href="{{ path('admin') }}">Назад</a>
        </div>
        <div class="admin-list__row">
            <a class="admin-list__item button button_service"
               href="{{ path('role_create') }}">
                &#10010;
            </a>
        </div>
        <hr>
        {% for role in roles %}
            <div class="admin-list__row">
                <a class="admin-list__item button button_service"
                   href="{{ path('role', { 'name': role.name }) }}">
                    {{ role.name }}
                    {{ role.role }}
                </a>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a class="admin-list__item button button_service"
                       href="{{ path('role_delete', { 'id': role.id }) }}">
                        &#10006;
                    </a>
                {% endif %}
            </div>
        {% endfor %}
        <hr>
    </div>
{% endblock %}

{% block admin_side %}
    Roles side
{% endblock %}
