{# ----AppBundle:Security:Admin:articles.html.twig----
=======================================================
Template to show all articles in data base for admins #}

{% extends ':Admin:admin_base.html.twig' %}

{% block content %}
    <div class="admin-list">
        <div class="admin-list__row">
            <a class="admin-list__item button button_orange button_to-return"
               href="{{ path('admin') }}">Назад</a>
        </div>
        <div class="admin-list__row">
            <a class="admin-list__item button button_service"
               href="{{ path('article_create') }}">
                    &#10010;
            </a>            
        </div>
        <hr>
        {% for article in articles %}
            {% if article.isDeleted %}
                <s>
            {% endif %}
            <div class="admin-list__row">                
                <a class="admin-list__item button button_service"
                   href="{{ path('show_news', { 'id': article.id }) }}">
                    {{ article.title }}
                    {{ article.author.username }}
                </a>
                <a class="admin-list__item button button_service"
                   href="{{ path("article_delete", { 'id': article.id}) }}">
                    &#10006;
                </a>                
            </div>
            {% if article.isDeleted %}
                </s>
            {% endif %}      
        {% endfor %}
        <hr>
    </div>
{% endblock %}

{% block admin_side %}
    Articles side
{% endblock %}
